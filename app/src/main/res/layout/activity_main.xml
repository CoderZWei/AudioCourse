<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <com.example.zw.audiocourse.opengl.MyGLSurfaceView
       android:id="@+id/mGLSurfaceView"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       app:layout_constraintTop_toTopOf="parent"
       />
   <SeekBar
       android:id="@+id/mSeekBar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="5dp"
       app:layout_constraintTop_toBottomOf="@+id/mGLSurfaceView"/>
   <TextView
       android:id="@+id/TextView_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toTopOf="@+id/Btn_start"
      app:layout_constraintTop_toBottomOf="@+id/mSeekBar"
       android:text="00:00/00:00"
       android:textSize="20dp"
       android:textColor="#222222"
       />
   <Button
       android:id="@+id/Btn_start"
       android:text="开始播放"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/TextView_time"
       />
   <Button
       android:id="@+id/Btn_pause"
       android:text="暂停播放"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/Btn_start"
       />
   <Button
       android:id="@+id/Btn_resume"
       android:text="继续播放"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/Btn_pause"
       />
    <Button
        android:id="@+id/Btn_seek"
        android:text="跳转播放"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Btn_resume"
        />

   <Button
       android:id="@+id/Btn_switch"
       android:text="切换播放"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/Btn_seek"
       />
   <Button
       android:id="@+id/Btn_stop"
       android:text="停止播放"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/Btn_switch"
       />

</android.support.constraint.ConstraintLayout>